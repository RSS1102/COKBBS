/* pages/index/index.wxss */

.pagelist {
  background-color: #f7f7f7;
  margin-top: 35rpx;
  border: 2px solid rgb(142, 225, 228);
}

/* tabs */
.weui-tabs-swiper {
  background-color: #474745;
  width: 100%;
  height: 0px;
}

.weui-tabs-bar__title {
  margin: 0px 10px;
}

.tab-bar-title__selected {
  font-size: 20px;
  font-weight: bold;
}

/* 还没有文章内容 */
.pageNull {
  font-size: 17px;
  margin: 15px;
}


/* 搜索 */
.msgflex {
  display: flex;
  margin-top: 7px;
  margin-left: 5px;
}

/* 搜索输入栏 */
.inputmsg {
  margin-top: 2.5px;
  height: 2.3em;
  width: 15.5em;
  position: relative;
  background-color: #ffffff;
  font-size: 14px;
}

 
.image {
  height: 80rpx;
  width: 80rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  border: 2px ridge rgb(255, 244, 231);
}

.sex {
  height: 40rpx;
  width: 40rpx;
  margin:30rpx 20rpx ;
  

}

/* --设置边框 ，设置姓名,kingdom在同一行--*/
.userinfo {
  border-radius: 6rpx;
  background-color: #f3e9f8;
  display: flex;
  margin-top: 20rpx;
  margin-left: 15rpx;
  border: 3px solid #d6bde2;
  height:50rpx;
}

.king {
  margin-left: 20rpx;
}

/* --标题--*/
.title-item {
  display: flex;
  margin: 10rpx;
  font-weight: bold;
}

.title-col {
  font-size: 45rpx;
}

.title-text {
  font-size: 35rpx;
}

/* --内容--*/
.page-item {
  height: 70rpx;
  font-size: 45rpx;
  margin: 10rpx;
  display: flex;
}

.page-col {
  font-weight: bold;

}

.page-text {
  font-size: 40rpx;
  max-width: 200px;
  /* 指定宽度.*/
  overflow: hidden;
  /*将超出内容隐藏*/
  text-overflow: ellipsis;
  /*IE专用属性，文本溢出时显示省略标记()；其他浏览器不支持。*/
  white-space: nowrap;
  /*强制内容不换行。强制在同一行内显示所有文本，直到文本结束或者遭遇 br 元素*/
}

/* photo */
.photo-view {
  display: flex;
  justify-content: center;
}

.photo {
  width: 90px;
  height: 100px;
  margin: 5px;
}

/* --时间--*/

.time {
  height: 40rpx;
  margin-bottom: 15rpx;
  float: right;
}


/* --头像,姓名,kingdom在同一行--*/
.flex {
  display: flex;
}

/* 点赞，留言，分享 */
/* 外部框 */
.btn-list {
  display: flex;
  width: 100%;
  background-color: #fcfafa;
  border: 2px solid rgb(142, 225, 228);
  border-style: ridge none none none;
  height: 40px;
  
}

/* 按钮 */
.btn-coin {
  display: flex;
  width: 33%;
  height: 40px;
  margin-left: 20rpx;
}


button[plain] {
  display: flex; 
  border: none;
  border-color: transparent;
}

/* 按钮次数*/
.btn-list text {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 8px;
  font-weight: bold;
}


/* 按钮图片 */
.btn-image {
  width: 80rpx;
  height: 80rpx;
  
}