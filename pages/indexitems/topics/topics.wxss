Page {
  overflow-x: hidden;
}

/* 循环列表 */
.list {
  border: 1px solid black;
  margin: 50rpx 0;
  border-radius: 8rpx;
  box-shadow: 0 0 10rpx 0 rgb(129, 126, 126);
}

/* 头部 */
.sharetit {
  display: flex;
  line-height: 120rpx;
}

/* 用户信息 */
.sharetit-userinfo {
  border-style: none solid none none;
  border-width: 1rpx;
}

.sharetit-avatarUrl {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
  border: 1rpx solid black;
  border-radius: 10%;
}

/* 文章用户姓名和时间 */
.sharetit-u {
  line-height: 60rpx;
}

.sharetit-u-nickName {
  font-weight: bold;
  margin: 0 20rpx 0 5rpx;
}

.sharetit-u-time {
  font-size: 25rpx;
  margin: 0 5rpx0 5rpx;
}

/* 文章标题 */
.shareTit {
  width: 100%;
  line-height: 50rpx;
  text-align: center;
  font-weight: bold;
  font-size: 50rpx;
  /* 盒子 */
  border-style: solid none solid none;
  border-width: 2rpx;
  padding: 20rpx 0;
}

/* 文章内容 */
.sharePage {
  width: 100%;
  font-size: 36rpx;
  /* 盒子 */
  border-style: solid none solid none;
  border-width: 2rpx;
  padding: 20rpx 0;
}

/* 视频 */
.fileTemp-mp4 {
  width: 95vw;
  position: relative;
  left: 50%;
  transform: translate(-50%, 0);
  margin: 10rpx 0;
}

/* 图片 */
.fileTemp-img {
  margin: 0;
  padding: 0;
  width: 745rpx;
  text-align: center;
  border-style: none solid solid solid;
  border-width: 1rpx;
}

.fileTemp-img-item {
  width: 700rpx;
  height: 500rpx;
  margin: 10rpx;
  display: inline-block;
  border-style: solid solid solid solid;
  border-width: 2rpx;
  border-color: rgba(63, 129, 216, 0.8);
}

