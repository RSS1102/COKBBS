.pagelist{
  background-color: #fcfafa;
     margin-top: 15rpx;
     border-color: rgb(255, 244, 231);
     border-style:ridge;
  }

  /* tabs */
.weui-tabs-swiper {
  background-color: #ecca31;
  width: 100%;
  height: 0px;
}
.weui-tabs-bar__title {
  margin: 0px 10px;
}
.tab-bar-title__selected {
  font-size: 20px;
  font-weight: bold;
}

  .image{
    height:80rpx;
    width: 80rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
    border-color: rgb(255, 244, 231);
    border-style:ridge;
  }
  
  /* --设置边框 ，设置姓名,kingdom在同一行--*/
  .name{
    border-radius: 10rpx;
    background-color: #f0ab2a;
    display: flex;
    margin-top: 30rpx;
    margin-left:30rpx ;
    border-style:ridge;
  }
  
  .king{
    margin-left:20rpx ;
    
  }
  /* 删除按钮 */
.btn-dele{
  margin-top: 10px;
  margin-left: 20%;
  text-align: center;
  background-color: rgb(240, 166, 166);
  width: 50px;
  height: 25px;
  border-radius: 20%;
  
}
  
  /* --标题--*/
  .titleitem{
    display: flex;
   
  }
  .titletfont{
    font-weight: bold;
    font-size: 45rpx;
  }
  .title{
    margin-left:1rpx ;
    margin-top: 2rpx;
  font-size: 40rpx;
  
  }
  
  /* --内容--*/
  .pageitem{
    height: 70rpx;
    font-size: 45rpx;
    margin-bottom: 15rpx;
    display: flex;
  }
  .pagefont{
    margin-left:1rpx ;
    margin-top: 2rpx;
  font-size: 40rpx;
  font-weight: bold;
  
  }
  .page{
    margin-left:1rpx ;
    margin-top: 2rpx;
    font-size: 40rpx;
    max-width:200px; /* 指定宽度.*/
    overflow:hidden; /*将超出内容隐藏*/
    text-overflow:ellipsis; /*IE专用属性，文本溢出时显示省略标记()；其他浏览器不支持。*/
    white-space:nowrap; /*强制内容不换行。强制在同一行内显示所有文本，直到文本结束或者遭遇 br 元素*/
  }
  .pagxq{
    margin-top: 7rpx;
    margin-left:2rpx;
    font-size: 37rpx;
    font-weight: bold;
    color: rgb(94, 94, 206); 
  }
  /* --时间--*/
  .timees{
   
    height: 40rpx;
   margin-bottom: 15rpx;
    }
  .time{
    float:right;
  
  }
  
  
  /* --头像,姓名,kingdom在同一行--*/
  .flex{
    display: flex;
    
  }