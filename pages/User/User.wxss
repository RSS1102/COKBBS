/* pages/User/User.wxss */
.me{
  height: 100%;
}
.userinfo{
  position: relative;
  width: 750rpx;
  height: 340rpx;
  background: rgb(141, 141, 141);
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 头像 */
.userinfo-avatar {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 28rpx;
  display:flex;
  justify-content: center;
}


.btninfo{
  margin-top: 100rpx;
}

.usertext{
  margin-top: 15rpx;
  color: aqua;
  font-weight: 100;
}
.viewtop{
  margin-top: 50rpx;
}
.viewstyle{
  width: 100%;
  height: 85rpx;
  border:2rpx solid #acb3ae;

}
/* 进入已发表文章按钮 */
.userinfo-msg{
  width: 10rpx;
  height: 15rpx;
  position: absolute;

}
/* 水平同行 */
.flex{
  display: flex;
  flex-wrap: wrap;
  
}
.btnstyle{
  font-size: 50px;
  
}
/* 更新用户信息 */
.btn-update{
  font-size:12px;  
   font-weight: bold ;
   background-color: rgb(0, 0, 0);
   text-align: center;
   margin-top: 5px ;
   border-radius: 10%;
}
/* 禁止更新用户信息 */
.btn-update-null{
  font-size:12px;  
   font-weight: bold ;
   background-color: rgb(196, 187, 187);
   text-align: center;
   margin-top: 5px ;
   border-radius: 10%;
   color: #ffffff;
}



/* 用户反馈 */
.feedbackbtn{
  display: flex;
  width: 100% !important;   /* 强制btn宽度100% */
  background-color: rgb(255, 255, 255);

}
.feedbackbtn text{
  text-align: left;
  font-size: 13px;
  font-weight:400;
}
.text2{
  text-align: right;
  font-size: 13px;
}